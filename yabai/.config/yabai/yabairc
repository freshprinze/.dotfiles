## general
yabai -m config layout bsp
yabai -m config window_placement second_child

## padding
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

## mouse settings
yabai -m config mouse_follows_focus off

## disable specific apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Hand Mirror$" manage=off
yabai -m rule --add app="^Time Machine$" manage=off
yabai -m rule --add app="^Alfred Preferences$" manage=off
yabai -m rule --add app="^Beyond Compare$" manage=off

## move apps to specific spaces
yabai -m rule --add app="^Wavebox$" space=1
yabai -m rule --add app="WhatsApp" display=2 # top

